.row
  .col-xs-1
  .col-xs-10
    .row
      %h1 Mentees
    .row
      .col-xs-9
      .col-xs-1
        = link_to 'Unavailable', '/admin/mentees?available_as_mentee=false'
      .col-xs-1
        = link_to 'Available', '/admin/mentees?available_as_mentee=true'
      .col-xs-1
        = link_to 'All', '/admin/mentees'

    .row 
      %table.table-striped
        %tr
          %th
            First Name
          %th
            Last Name
          %th
            Department
          %th
            Location
          %th
            Mentor Count
          %th
            Capacity

        - @mentees.each do |m|
          %tr
            %td
              = m.profile.first_name
            %td
              = m.profile.last_name
            %td
              = m.profile.department
            %td
              = m.profile.location
            %td
              = m.mentors.count
            %td
              = m.mentee_profile.capacity
        