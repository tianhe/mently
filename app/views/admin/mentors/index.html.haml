.row
  .col-xs-1
  .col-xs-10
    .row
      %h1 Mentors
    .row
      .col-xs-7
      .col-xs-5
        = form_tag '/admin/mentors', method: 'get' do
          = label_tag :by_department, "Department"
          = select_tag :by_department, options_for_select(['', 'Tech', 'Product'], params[:by_department])
          = label_tag :is_available_as_mentor, "Available"
          = select_tag :is_available_as_mentor, options_for_select(['true', 'false'], params[:is_available_as_mentor])    
          = submit_tag("Filter", class: 'filter-button')

    .row 
      %table.table-striped
        %tr
          %th
            First Name
          %th
            Last Name
          %th
            Department
          %th
            Location
          %th
            Mentee Count
          %th
            Capacity

        - @mentors.each do |m|
          %tr
            %td
              = m.profile.first_name
            %td
              = m.profile.last_name
            %td
              = m.profile.department
            %td
              = m.profile.location
            %td
              = m.mentees.count
            %td
              = m.mentee_profile.capacity
        