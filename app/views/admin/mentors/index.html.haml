.row
  .col-xs-1
  .col-xs-10
    .row
      %h1 Mentors
    .row
      .col-xs-8
      .col-xs-4
        = form_tag '/admin/mentors', method: 'get' do
          = label_tag :by_department
          = select_tag :by_department, options_for_select(['Tech', 'Product'])
          = label_tag :is_available_as_mentor
          = select_tag :is_available_as_mentor, options_for_select(['true', 'false'])
          = submit_tag("Filter")

    .row 
      %table.table-striped
        %tr
          %th
            First Name
          %th
            Last Name
          %th
            Department
          %th
            Location
          %th
            Mentee Count
          %th
            Capacity

        - @mentors.each do |m|
          %tr
            %td
              = m.profile.first_name
            %td
              = m.profile.last_name
            %td
              = m.profile.department
            %td
              = m.profile.location
            %td
              = m.mentees.count
            %td
              = m.mentee_profile.capacity
        