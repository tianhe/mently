.row
  .col-xs-1
  .col-xs-10
    .row
      %h1 Mentees

    .row 
      %table.table-striped
        %tr
          %th
            First Name
          %th
            Last Name
          %th
            Department
          %th
            Location
          %th
            Mentor Count
          %th
            Capacity

        - @mentees.each do |m|
          %tr
            %td
              = m.profile.first_name
            %td
              = m.profile.last_name
            %td
              = m.profile.department
            %td
              = m.profile.location
            %td
              = m.mentors.count
            %td
              = m.preferences.mentor.first.capacity
        